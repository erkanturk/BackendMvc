@{
    ViewData["Title"]="Masa "+ViewBag.MasaNumarasi + "  - Geçmiş Rezervasyonlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count==0)
{
    <div class="alert alert-info">Bu masaya ait gelecekte bir rezervasyon bulunmamaktadır.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Müşteri Adı</th>
                <th>Rezervasyon Tarihi</th>
                <th>Oluşturma Tarihi</th>
                <th>MasaNumarası</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rezervasyon in Model)
            {
                <tr>
                    <td>@rezervasyon.MusteriAdi</td>
                    <td>@rezervasyon.RezervasyonTarihi.ToString("dd.MM.yyyy HH:mm:ss")</td>
                    <td>@rezervasyon.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                      <td>
                        @rezervasyon.MasaId
                    </td> 
                </tr>
            }
        </tbody>
    </table>

}