@{
    ViewData["Title"] = "Masa " + ViewBag.MasaNumarasi + " - Rezervasyon Detayları";
}
<h2 class="mb-4">Masa @ViewBag.MasaNumarasi - Rezervasyon Detayları</h2>
<div class="mb-3">
    <a asp-controller="Rezervasyon" asp-action="Ekle" asp-route-masaId="@ViewBag.MasaId" class="btn btn-success">Yeni Rezervasyon</a>
    <a asp-controller="Garson" asp-action="Index" class="btn btn-secondary">Masaya Geri dön</a>
</div>
@if(Model.Count==0)
{
    <div class="alert alert-info">Bu masaya ait gelecekte bir rezervasyon bulunamadı</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Müşteri Adı</th>
                <th>Rezervasyon Tarihi</th>
                <th>Oluşturma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var rezervasyon in Model)
            {
                <tr>
                    <td>@rezervasyon.MusteriAdi</td>
                    <td>@rezervasyon.RezervasyonTarihi.ToString("dd-MM-yyyy HH:mm:ss")</td>
                    <td>@rezervasyon.OlusturmaTarihi.ToString("dd-MM-yyyy HH:mm:ss")</td>
                    <td>
                        <form asp-controller="Garson" asp-action="RezervasyonAktifEt" method="post" style="display:inline;">
                            <input type="hidden" name="rezervasyonId" value="@rezervasyon.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Aktif Et</button>
                        </form>
                        <a asp-controller="Rezervasyon" asp-action="Duzenle" asp-route-id="@rezervasyon.Id" class="btn btn-warning btn-sm me-2">Düzenle</a>
                        <a asp-action="Sil" asp-route-id="@rezervasyon.Id" class="btn btn-danger btn-sm me-2">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}