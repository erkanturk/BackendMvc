@{
    ViewData["Title"] = "Masa " + ViewBag.MasaNumarasi + " - Rezervasyon Düzenle";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header btn btn-warning text-white">
                <h4>Masa @ViewBag.MasaNumarasi - Rezervasyon Düzenle</h4>
            </div>
            <div class="card-body">
                @if(ViewBag.ErrorMessage!=null)
                {
                    <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
                }
                <form asp-action="Duzenle" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="form-group mb-3">
                        <label class="form-label">Müşteri Adı</label>
                        <input type="text" name="musteriAdi" class="form-control" value="@Model.MusteriAdi" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Rezervasyon Tarihi</label>
                        <input type="datetime-local" name="rezervasyonTarihi" class="form-control"value="@Model.RezervasyonTarihi.ToString("yyyy-MM-dd HH:mm:ss")"
                        min="@DateTime.Today.ToString("yyyy-MM-dd")"
                        required />
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-warning">Guncelle</button>
                        <a asp-controller="Rezervasyon" asp-action="Detay" asp-route-masaId="@ViewBag.MasaId" class="btn btn-secondary">Geri</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>