@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Ado.Net</h1>

    <hr />
    <form method="post" asp-controller="Home" asp-action="AddData" class="mb-3">
        <button type="submit" class="btn btn-secondary">Add Default Data</button>
    </form>
    <hr />
    <form method="post" asp-action="AddDataSecure" class="mb-3">
        <div class="mb-2">
            <input type="text" name="FirstName" placeholder="First Name" class="form-control" required />
        </div>
        <div class="mb-2">
            <input type="text" name="LastName" placeholder="Last Name" class="form-control" required />
        </div>
        <div class="mb-2">
            <input type="number" name="Age" placeholder="Age" class="form-control" required />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Add Data Secure</button>
        </div>
    </form>
    <hr />
    <form method="post" asp-action="UpdateDataSecure" class="mb-3">
        <div class="mb-2">
            <input type="number" name="Id" placeholder="Student Number" class="form-control" required />

        </div>
        <div class="mb-2">
            <input type="text" name="FirstName" placeholder="First Name" class="form-control" required />
        </div>
        <div class="mb-2">
            <input type="text" name="LastName" placeholder="Last Name" class="form-control" required />
        </div>
        <div class="mb-2">
            <input type="number" name="Age" placeholder="Age" class="form-control" required />
        </div>
        <div>
            <button type="submit" class="btn btn-warning">Update Data Secure By Id</button>
        </div>
    </form>
    <hr />
    <form method="post" asp-action="DeleteDataSecure" class="mb-3">
        <div class="mb-2">
            <input type="number" name="Id" placeholder="Student Number" class="form-control" required />
            
        </div>
        <button type="submit" class="btn btn-danger">Delete Student By ID</button>
    </form>
    <a href="Home/GetData" class="btn btn-info me-2">Get Students</a>
    <a href="Home/GetDataCount" class="btn btn-info me-2">Get Students Count</a>
</div>
